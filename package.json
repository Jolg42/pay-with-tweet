{
  "name": "pay-with-tweet",
  "version": "1.0.0",
  "description": "Buy ebooks paying with a tweet",
  "main": "src/server.js",
  "repository": "git+https://github.com/pbarrenechea/pay-with-tweet.git",
  "scripts": {
    "build-css": "node-sass --include-path scss src/scss/main.scss   src/static/css/style.css",
    "start": "npm run build-css && cross-env NODE_ENV=production node_modules/.bin/babel-node --presets react,es2015 src/server.js",
    "start-dev": "npm run build-css && npm run start-dev-hmr",
    "start-dev-single-page": "node_modules/.bin/http-server src/static",
    "start-dev-hmr": "node_modules/.bin/webpack-dev-server --progress --inline --hot --open",
    "build": "cross-env NODE_ENV=production node_modules/.bin/webpack -p"
  },
  "author": "Pablo Barrenechea",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "cross-env": "^3.1.4",
    "ejs": "^2.5.1",
    "express": "^4.14.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-router": "^2.6.1"
  },
  "devDependencies": {
    "http-server": "^0.9.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.12.5",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^6.0.6",
    "webpack": "^1.15.0",
    "webpack-dev-server": "^1.14.1"
  }
}
